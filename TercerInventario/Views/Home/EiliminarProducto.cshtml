
@model TercerInventario.Models.Producto

@{
    ViewData["Title"] = "EiliminarProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger">¿Estas seguro de elimiar el empleado?</h3>
<hr/>
<div class="row">
    <div class="col-sm-4">
        <form asp-action="EiliminarProducto" asp-controller="Home" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-2">
                <label class="form-label" asp-for="Nombre">Nombre del producto</label>
                <input class="form-control form-control-sm" asp-for="Nombre" disabled/>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="IdCategoriaNavigation.Nombre">Categoría</label>
                <input class="form-control form-control-sm" asp-for="IdCategoriaNavigation.Nombre" disabled />
            </div>

            <div class="mb-2">
          
                    <button class="btn btn-primary btn-sm w-25"> Eliminar </button>
                


                <a class="btn btn-success btn-sm" asp-action="Index" asp-controller="Home">Volver</a>
            </div>

        </form>
    </div>

</div>
