@model TercerInventario.Models.ViewModel.ProductoMV

@{
    ViewData["Title"] = "CategoriaProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if(Model.oProducto.Id == 0)
{
    <h1>Crear Producto</h1>
}else
{
    <h1>Editar Producto</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="GuardarProducto" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oProducto.Id" />

            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.Nombre">Nombre del producto</label>
                    <input class="form-control form-control-sm" asp-for="oProducto.Nombre" required />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.IdCategoria">Categoría</label>
                <select class="form-label form-select-sm" asp-for="oProducto.IdCategoria" asp-items="@Model.oListaCategoria" required>
                   
                </select>
            </div>

            <div class="mb-2">
                @if (Model.oProducto.Id == 0)
                {
                  <button class="btn btn-primary btn-sm w-25"> Crear </button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25"> Modificar </button>
                }


                <a class="btn btn-success btn-sm" asp-action="Index" asp-controller="Home" >Volver</a>
            </div>

        </form>
    </div>

</div>